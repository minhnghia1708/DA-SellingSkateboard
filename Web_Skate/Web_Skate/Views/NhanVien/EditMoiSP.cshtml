@model Web_Skate.Models.SanPham

@{
    ViewBag.Title = "EditMoiSP";
    Layout = "~/Views/Shared/_LayoutNhanVien.cshtml";
}

<h2 style="text-align:center">CHỈNH SỬA THÔNG TIN SẢN PHẨM</h2>

@using (Html.BeginForm("EditMoiSP", "NhanVien", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_SanPham)

        <div class="form-group">
            <h6 style="font-weight:bold">Mã Sản Phẩm</h6> 
            <div class="col-md-10">
                <div style="font:18px; padding: 5px 0 0 5px">@Model.ID_SanPham</div>
            </div>
        </div>

        <div class="form-group">
            <h6 style="font-weight:bold">Loại Sản Phẩm</h6>
            <div class="col-md-10">
                @Html.DropDownList("ID_Loai")
            </div>
        </div>

        <div class="form-group">
            <h6 style="font-weight:bold">Thương Hiệu</h6>
            <div class="col-md-10">
                @Html.DropDownList("ID_ThuongHieu")
            </div>
        </div>

        <div class="form-group">
            <h6 style="font-weight:bold">Tên Sản Phẩm</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenSanPham, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenSanPham, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6 style="font-weight:bold">Giá Sản Phẩm</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Gia_SanPham, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Gia_SanPham, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6 style="font-weight:bold">Ảnh Sản Phẩm</h6>
            <div class="col-md-10">
                <input type="file" name="fileUpload" />
                <img src="@Url.Content("~/asset/shop/"+ Model.Image)" width="120px" /> (Ảnh hiện tại)
                @*thông báo ảnh trùng*@
                @ViewBag.ThongBao
            </div>
        </div>

        <div class="form-group">
            <h6 style="font-weight:bold">Chi Tiết Sản Phẩm</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ChiTietSanPham, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ChiTietSanPham, "", new { @class = "text-danger" })
            </div>
        </div>

        
        <div class="form-group">
            <h6 style="font-weight:bold">Số Lượng</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sửa" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Xe")
</div>